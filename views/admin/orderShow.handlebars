<div class="container">
<h1 style="text-align:center">Admin Orders Show</h1>

  <div class="col-md-6">
    <h3 style="text-align:center">Ordered Items</h3>
    {{#each order.items as |item|}}
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Field</th>
            <th>Value</th>
          </tr>
        </thead>
        <tr>
          <td>Name</td>
          <td>{{item.name}}</td>
        </tr>
        <tr>
          <td>Price</td>
          <td>{{item.price}}</td>
        </tr>
        <tr>
          <td>SKU</td>
          <td>{{item.sku}}</td>
        </tr>
        <tr>
          <td>Category</td>
          <td>{{item.category}}</td>
        </tr>
        <tr>
          <td>Quantity</td>
          <td>{{item.quantity}}</td>
        </tr>
      </table>
    {{/each}}
  </div>
  <div class="col-md-6">
    <h3 style="text-align:center">Customer Info</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Field</th>
          <th>Value</th>
        </tr>
      </thead>
      <tr>
          <td>First Name</td>
          <td>{{order.fname}}</td>
      </tr>
      <tr>
          <td>Last Name</td>
          <td>{{order.lname}}</td>
      </tr>
      <tr>
          <td>Email</td>
          <td>{{order.email}}</td>
      </tr>
      <tr>
          <td>Street</td>
          <td>{{order.street}}</td>
      </tr>
      <tr>
          <td>City</td>
          <td>{{order.city}}</td>
      </tr>
      <tr>
          <td>State</td>
          <td>{{order.state}}</td>
      </tr>
    </table>
    <h3 style="text-align:center">Order Info</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Field</th>
          <th>Value</th>
        </tr>
      </thead>
      <tr>
          <td>Checkout Date</td>
          <td>{{order.createdAt}}</td>
      </tr>
      <tr>
          <td>Stripe Token</td>
          <td>{{order.stripeToken}}</td>
      </tr>
      <tr>
          <td>Card Type</td>
          <td>Visa</td>
      </tr>
  </div>
</div>